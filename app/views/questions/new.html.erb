<div id="question" class="big-bg">
    <header class="page-header wrapper">
        <nav>
            <ul class="main-nav">
                <li><%= link_to "マイページ", "/users/#{current_user.id}", method: :get, class: "link" %></li>
                <li><%= link_to "トップ", questions_path, method: :get, class: "link" %></li>
            </ul>
        </nav>
    </header>

    <div class="wrapper">
        <%= form_with(model: @question, local: true) do |form| %>
            <div>
                <label class="form-image">
                  <%= form.file_field :image, class: "hidden" %>
                  <h2 class="page-title-q">質問する写真を選択<br>( ここをタッチ！! )</h2>
                </label>
            </div> 

            <div>
                <%= form.text_area :comp_text, placeholder: "わかったところ(必須)" , class: "comple" %>
            </div>

            <div>
                <%= form.text_area :incomp_text, placeholder: "わからないところ(必須)", class: "incomple" %>
            </div>

            <%= form.submit "送信" , class: "submit-button" %>
        <% end %>
    </div><!-- /.wrapper -->
</div><!-- /#question -->

