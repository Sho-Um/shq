<div id="question" class="big-bg">
    <header class="page-header wrapper">
        <nav>
            <ul class="main-nav">
                <li><%= link_to "マイページ", "/users/#{current_user.id}", method: :get, class: "link" %></li>
                <li><%= link_to "トップ", questions_path, method: :get, class: "link" %></li>
            </ul>
        </nav>
    </header>

    <div class="wrapper">
        <h2 class="page-title-q">質問する</h2>
        <%= form_with(model: @question, local: true) do |form| %>
            <div>
                <%# <label for="image"><span class=q-picture>写真</span></label> %>
                <%= form.label :image, "写真" , class: "question-img"%>
                <%= form.file_field :image, id:"item-image" %>
            </div> 

            <div>
                <%= form.label :comp_text, "どこまでわかったか?" , class: "comp"%>
                <%= form.text_area :comp_text, placeholder: "(わかったところ)(400字以内)" , class: "comple" %>
            </div>

            <div>
                <%= form.label :incomp_text, "どこからわからないか?" , class: "incomp"%>
                <%= form.text_area :incomp_text, placeholder: "(わからないところ)(400字以内)", class: "incomple" %>
            </div>

            <%= form.submit "送信" , class: "button" %>
        <% end %>
    </div><!-- /.wrapper -->
</div><!-- /#question -->

